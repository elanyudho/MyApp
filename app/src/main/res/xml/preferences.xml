<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">>
    <PreferenceCategory
        android:title="Reminder">
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_notif_key_daily"
            android:title="Notification"
            android:summary="Daily Reminder to Study"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Theme">
        <ListPreference
            app:defaultValue="@string/pref_dark_auto"
            app:entries="@array/dark_mode"
            app:entryValues="@array/dark_mode_value"
            app:key="@string/pref_dark_key_dark_mode"
            app:title="@string/pref_dark_title"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

</PreferenceScreen>